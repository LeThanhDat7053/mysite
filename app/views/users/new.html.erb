<h1>Sign Up</h1>

<%= form_with model: @user, url: users_path, html: { class: 'form-sign-up' } do |form| %>
    <div class="form-input">
      <%= form.email_field :email_address, required: true, placeholder: "Enter your email address" %>
    </div>
    <div class="form-input">
      <%= form.password_field :password, required: true, placeholder: "Enter your password" %>
    </div>
    <div class="form-input">
      <%= form.password_field :password_confirmation, required: true, placeholder: "Confirm your password" %>
    </div>
    <div class="form-actions">
      <%= form.submit "Sign up" %>
    </div>
  <% end %>
  
