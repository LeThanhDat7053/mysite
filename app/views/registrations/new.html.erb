<%= form_with model: @user, url: users_path, local: true, class: 'form-signup' do |form| %>
  <div class="form-title-4">
    <h2>Create New Account</h2>
  </div>

  <div class="form-input-4">
    <%= form.text_field :first_name, required: true, placeholder: "First Name", class: "form-control" %>
  </div>

  <div class="form-input-4">
    <%= form.text_field :last_name, required: true, placeholder: "Last Name", class: "form-control" %>
  </div>

  <div class="form-input-4">
    <%= form.email_field :email, required: true, placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-input-4">
    <%= form.password_field :password, required: true, placeholder: "Password", class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Sign Up", class: "btn-submit" %>
  </div>

  <div class="link-sign-in-4">
    <%= link_to 'Already have an account? Sign in', new_session_path %>
  </div>
<% end %>
