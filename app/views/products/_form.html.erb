<%= form_with model: product, html: { class: 'product-form' } do |form| %>
  <div class="form-input">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-input">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: "form-control" %>
  </div>

  <div class="form-input">
    <%= form.label :featured_image %>
    <%= form.file_field :featured_image, accept: "image/*", class: "form-control-file" %>
  </div>

  <div class="form-input">
    <%= form.label :inventory_count %>
    <%= form.number_field :inventory_count, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Create Product", class: "btn-submit" %>
  </div>
<% end %>
